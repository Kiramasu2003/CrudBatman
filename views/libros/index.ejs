<%- include ../layouts/cabecera.ejs %>
    <br />
    <br />
    <a href="/libros/crear" class="btn btn-primary" type="button">Crear un nuevo libro</a>
    <br />
    <br />

    <table class="table table-light">
        <thead class="thead-light">
            <tr>
                <th>#</th>
                <th>TITULO</th>
                <th>AUTOR</th>
                <th>EDITORIAL</th>
                <th>ACCIONES</th>
            </tr>
        </thead>
        <tbody>
            <% for( let libro=0; libro < libros.length; libro++ ) { %>

                <tr>
                    <td>
                        <%libros[libro].id%>
                    </td>
                    <td>
                        <%libros[libro].titulo%>
                    </td>
                    <td>
                        <%libros[libro].autor%>
                    </td>
                    <td>
                        <%libros[libro].editorial%>
                    </td>
                    <td>Editar | Borrar</td>
                </tr>

                <% } %>


        </tbody>
    </table>
    <%- include ../layouts/pie.ejs %>