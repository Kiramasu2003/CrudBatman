<%- include ../layouts/cabecera.ejs %>
    <br />
    <br />

    <div class="card">
        <div class="card-header">
            Formulario de captura
        </div>
        <div class="card-body">
            <h5 class="card-title">Editar Datos</h5>
            <p class="card-text">
            <form method="post" action="../actualizar/">

                <input type="hidden" name="id" value="<%=revista.id%>">

                <div class="form-group">
                    <label for="my-input">Editorial</label>
                    <input id="my-input" class="form-control" value="<%=revista.editorial%> " type="text"
                        name="editorial">
                </div>

                <div class="form-group">
                    <label for="my-input">Fecha</label>
                    <input id="my-input" class="form-control" value="<%=revista.fecha%> " type="text" name="fecha">
                </div>

                <div class="form-group">
                    <label for="my-input">Genero</label>
                    <input id="my-input" class="form-control" value="<%=revista.genero%> " type="text" name="genero">
                </div>

                <button class="btn btn-success" type="submit">Actualizar</button>
                <a class="btn btn-primary" href="/revistas">Cancelar</a>
            </form>
            </p>
        </div>
    </div>

    <br />
    <%- include ../layouts/pie.ejs %>